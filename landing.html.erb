<%= render 'home/navbar' %>

    <div class="parallax center">
      <div style="text-align:center" onmouseover="Play()" onmouseout="Pause()">
        <video id="video1" width="880">
          <source src="/assets/Loja.mp4" type="video/mp4" />
          Your browser does not support HTML5 video.
        </video>
      </div>
    </div>

    <div class=" section yellow accent-2 accent-2">
      <div class="row container">
        <div class="center waves-white btn modal-trigger black-text">
          <!-- <a class="waves-white btn modal-trigger grey darken-1" href="#contact/new">Inscreva-se</a> -->
              <%= link_to 'Page', new_contact_path %>
        </div>
      </div>
        <h4 class="black-text center">Para receber novidades.</h4>
    </div>

      <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
     <div class="modal-content">
    <%= render 'form1', contact: @contact %>
     </div>
    </div>

    <script type="text/javascript">
    var myVideo=document.getElementById("video1");

    function Pause()
    {
      myVideo.pause();
    }
    function Play()
    {
    if (myVideo.paused)
      myVideo.play();
    }
    </script>
